{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "noEmit": true,
    "sourceMap": true,
    "lib": ["esnext"],
    "allowJs": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/"],
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "types": ["node", "jest"],
      "typeRoots": ["./src/@types", "node_modules/@types", "src/typings.d.ts"],
      "noUnusedLocals": false
    }
  }
}
